{% extends "layouts/admin.twig" %}

{% block title %} USUARIOS | EDIT {% endblock %}

{% block content %} 
    <!-- check out section -->
	<div class="checkout-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-8">
					<div class="checkout-accordion-wrap">
						<div class="accordion" id="accordionExample">
						  <div class="card single-accordion">
						    <div class="card-header" id="headingOne">
						      <h5 class="mb-0">
						        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
						          Actualizar usuario
						        </button>
						      </h5>
						    </div>
						    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
						      <div class="card-body">
						        <div class="billing-address-form">
								<form action="{{ URL }}?controller=users&action=update" method="POST" method="POST">
												<p><input type="hidden" name="id"  value="{{ user.id }}"></p>
												<label type="text" class="form-label">Nombre:</label>
												<input type="text" id="nombre" name="nombre" value="{{ user.nombre }}" placeholder="Nombre" class="form-control">
												<label type="text"   class="form-label">Apellidos:</label>
												<input type="text" id="apellidos" name="apellidos" value="{{ user.apellidos }}" placeholder="Apellidos" class="form-control">
												<label type="text" class="form-label">Email:</label>
												<input type="text"  id="email" name="email" class="form-control" value="{{ user.email }}" placeholder="E-mail">
												<label type="text" class="form-label">Password:</label>
												<input type="password" id="password" name="password"  class="form-control" placeholder="password">
												<br>
												<button class="btn btn-info" type="submit">Actualizar</button>
										</form>
