{% extends "layouts/private.twig" %}

{% block title %}Floristeria |Welcome
{% endblock %}

{% block style %}{% endblock %}

{% block content %}
	<div id="carousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="assets/img/ramomorado.jpg" class="d-block w-100" alt="...">
			</div>
			<div class="carousel-item">
				<img src="assets/img/tulipan.png" class="d-block w-100" alt="...">
			</div>
			<div class="carousel-item">
				<img src="assets/img/aloevera.jpg" class="d-block w-100" alt="...">
			</div>
		</div>
	</div>

	<div class="row product-lists">
		{% for u in productos %}
			<div class="col-lg-4 col-md-6 text-center {{ u.id }}">
				<div class="card-header py-3">
					<div class="product-image">
						<a href="#"><img src="assets/img/rosas.jpg" whith:10% alt=""></a>
					</div>
					<h3>{{ u.nombreProductos }}</h3>
					<h3>{{ u.nombre }}</h3>
					<p class="product-price">
						<span>Precio:
						</span>
						{{ u.precio }}
					</p>
					<p class="product-price">
						<span>Cantidad diposnible</span>
						{{ u.stock }}
					</p>
					<a href="{{ URL }}?controller=carrito&action=agregar&id={{ u.id }}" class="cart-btn">
						<i class="fas fa-shopping-cart"></i>
						Agregar</a>
				</div>
			</div>
		{% endfor %}
	</div>
</div></div><!-- end products -->{% endblock %}{% block script %}{% endblock %}
