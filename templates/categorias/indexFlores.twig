{% extends "layouts/private.twig" %}

{% block title %}Floristeria |Flores
{% endblock %}

{% block style %}{% endblock %}

{% block content %}
	<!-- cart -->
	<div class="row product-lists">
		{% for u in productos %}
			<div class="col-lg-4 col-md-6 text-center {{ u.id }}">
				<div class="single-product-item">
                <br>
					<div class="product-image">
						<a href="#"><img class="rounded-pill" src="assets/img/rosas.jpg" width="140" height="140" alt=""></a>
					</div>
					<h3>{{ u.nombreProductos }}</h3>
					<h3>{{ u.nombre }}</h3>
					<p class="product-price">
						<span>Precio por ramo</span>
						{{ u.precio }}
					</p>
					<p class="product-price">
						<span>Cantidad disponible</span>
						{{ u.stock }}
					</p>
					<a href="{{ URL }}?controller=carrito&action=agregar&id={{ u.id }}" <a class="btn btn-secondary">
						<i class="fas fa-shopping-cart"></i>
						Agregar</a>
				</div>
			</div>
          
		{% endfor %}
	</div>
</div></div><!-- end cart -->{% endblock %}{% block script %}{% endblock %}
