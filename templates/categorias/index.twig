{% extends "layouts/admin.twig" %}

{% block title %}CATEGORIAS{% endblock %}

{% block content %}

    <!-- cart -->
	<div class="cart-section mt-150 mb-150">
		<div class="container">
         <a href="{{ URL }}?controller=categorias&action=create" >
         <p><input type="submit" value="Crear"></p>
         </a>
			<div class="row">
				<div class="col-lg-8 col-md-12">
					<div class="cart-table-wrap">
						<table class="cart-table">
							<thead class="cart-table-head">
								<tr class="table-head-row">
									<th class="product-remove"></th>
									<th class="product-image">Nombre</th>
									<th class="product-total"></th>
								</tr>
							</thead>
							<tbody>
                             {% for u in categorias %}
								<tr class="table-body-row">
									<td class="product-remove">{{ u.id }}</td>
									<td class="product-name">{{ u.nombre }}</td>
									<td class="product-total"> 
                                        <a href="{{ URL }}?controller=categorias&action=edit&id={{ u.id }}" class="btn btn-secondary">Edit</a>
                                        <a href="{{ URL }}?controller=categorias&action=show&id={{ u.id }}" class="btn btn-success">Show</a>
                                        <a href="{{ URL }}?controller=categorias&action=delete&id={{ u.id }}" class="btn btn-danger">Delete</a>
                                    </td>
								</tr>
                                {% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end cart -->    
{% endblock %}