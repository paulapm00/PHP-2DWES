{% extends "layouts/admin.twig" %}

{% block title %} PRODUCTOS | SHOW {% endblock %}

{% block content %} 
<br><br><br><br><br><br>
    <!-- single product -->
	<div class="single-product mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-md-5">
					<div class="single-product-img">
						<img src="assets/img/login.svg" style="border-radius:50%"alt="">
					</div>
				</div> 
				<div class="col-md-7">
					<div class="single-product-content">
						<h3>{{ producto.nombreProductos }}</h3>
						<p> Descripción: {{ producto.descripcion }}</p>
						<p>Precio: {{ producto.precio }} €</p>
						<p>Stock disponible: {{ producto.stock }}</p>
                        <br><br><br><br><br><br><br><br><br><br><br><br>
						<div class="single-product-form">
							<a href="{{ URL }}?controller=productos&action=index" class="cart-btn"> Volver</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end single product -->
{% endblock %}